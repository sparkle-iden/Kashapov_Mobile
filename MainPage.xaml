<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kashapov.MainPage"
              NavigationPage.HasNavigationBar="False">

    <VerticalStackLayout Spacing="20">
        <Entry x:Name="Login_entry" Placeholder="Введите логин"></Entry>
        <Entry x:Name="Password_entry" Placeholder="Введите пароль"></Entry>
        <Button Text="Войти" Clicked="Button_Clicked_1" WidthRequest="250"></Button>
        <Button Text="Зарегестрироваться" Clicked="Button_Clicked" WidthRequest="250"></Button>
    </VerticalStackLayout>
    
</ContentPage>
